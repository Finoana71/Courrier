@page
@model CreerCourrierModel
@{
    ViewData["Title"] = "Créer courrier";
}
<link rel="stylesheet" href="~/css/CreerCourrier.css" />

<h1 class="text-center">Créer un courrier</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Courrier.Objet" class="control-label">Objet</label>
                <input asp-for="Courrier.Objet" class="form-control" />
                <span asp-validation-for="Courrier.Objet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Courrier.Reference" class="control-label">Référence</label>
                <input asp-for="Courrier.Reference" class="form-control" />
                <span asp-validation-for="Courrier.Reference" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Courrier.Commentaire" class="control-label">Commentaire</label>
                <textarea asp-for="Courrier.Commentaire" class="form-control"></textarea>
                <span asp-validation-for="Courrier.Commentaire" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Courrier.Expediteur" class="control-label">Expéditeur</label>
                <input asp-for="Courrier.Expediteur" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Destinataires</label>
                <select multiple name="SelectedDepartements" class="form-control" asp-items="ViewBag.Departements"></select>
            </div><div class="form-group">
                <label class="control-label">Type courrier</label>
                <div class="form-check">
                    <input type="checkbox" asp-for="Courrier.Interne" class="form-check-input"/>
                    <label class="form-check-label">Interne</label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Courrier.IdFlag" class="control-label">Flag</label>
                <select asp-for="Courrier.IdFlag" class="form-control" asp-items="ViewBag.IdFlag"></select>
            </div>
            <div class="form-group mt-1">
                <label class="control-label">Fichier</label>
                <input type="file" name="FileUpload" class="form-control-file" />
            </div>
            <div class="form-group text-center mb-2">
                <input type="submit" value="Créer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
